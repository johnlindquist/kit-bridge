{
  "name": "kit-bridge",
  "version": "1.0.0",
  "description": "",
  "main": "./dist/cjs/index.cjs",
  "module": "./dist/esm/index.js",
  "type": "module",
  "types": "./dist/types/index.d.ts",
  "typesVersions": {
    "*": {
      "esm/*": [
        "types/*"
      ],
      "cjs/*": [
        "types/*"
      ]
    }
  },
  "exports": {
    "./esm/*": "./dist/esm/*.js",
    "./cjs/*": "./dist/cjs/*.cjs"
  },
  "scripts": {
    "clean": "rimraf ./dist",
    "tsc": "tsc ./src/*.ts --allowSyntheticDefaultImports --moduleResolution node --allowJs",
    "tsc:esm": "npm run tsc -- --module ES2020 --target ES2020 --outDir ./dist/esm",
    "tsc:cjs": "npm run tsc -- --module commonjs --target ES2020  --outDir ./dist/cjs",
    "tsc:types": "npm run tsc -- --outDir ./types --declaration --emitDeclarationOnly",
    "cjs:rename": "renamer --path-element --find js --replace cjs ./dist/cjs/*",
    "cjs:replace": "find ./dist/cjs/* -type f -exec sed -i '' 's/require(\"\\.\\/\\(.*\\)\\.js\")/require(\"\\.\\/\\1\\.cjs\")/g' {} \\; ",
    "cjs:import": "find ./dist/cjs/* -type f -exec sed -i '' 's/Promise.resolve().then(() => require(\"\\(.*\\)\"))/import(\"\\1\")/g' {} \\; ",
    "build": "npm run clean && npm-run-all tsc:* && npm-run-all cjs:*",
    "prepublish": "build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/fs-extra": "^9.0.11",
    "@types/node": "^15.14.0",
    "@types/react": "^17.0.13",
    "@types/shelljs": "^0.8.8",
    "npm-run-all": "^4.1.5",
    "renamer": "^3.2.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "fs-extra": "^10.0.0",
    "lowdb": "^2.1.0"
  }
}
